{
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev-server\" \"npm run dev-watch\"",
    "dev-server": "nodemon -e go,json,html --exec go run . --signal SIGUSR2",
    "dev-watch": "npx tailwindcss -i ./tailwind.css -o ./web/static/styles.css --watch",
    "build": "npx tailwindcss -i ./tailwind.css -o ./web/static/styles.css",
    "start": "go run ."
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.3"
  }
}